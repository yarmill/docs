{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Yarmill",
  "description": "Yarmill Docs & Guidelines",
  "colors": {
    "primary": "#513FF8",
    "light": "#513FF8",
    "dark": "#9E93FB"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "languages": [
      {
        "language": "en",
        "anchors": [
          {
            "anchor": "Documentation",
            "icon": "book-open-cover",
            "groups": [
              {
                "group": "Getting Started",
                "pages": ["documentation/welcome", "documentation/basics"]
              }
            ]
          },
          {
            "anchor": "Changelog",
            "icon": "hand-peace"
          },
          {
            "anchor": "API Reference",
            "icon": "code",
            "groups": [
              {
                "group": "API documentation",
                "pages": ["api-reference/introduction"]
              },
              {
                "group": "Endpoint examples",
                "pages": [
                  "api-reference/endpoint/create",
                  "api-reference/endpoint/delete",
                  "api-reference/endpoint/get",
                  "api-reference/endpoint/webhook"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@yarmill.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Go to Yarmill",
      "href": "https://yarmill.com/en/sign-in"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
       "website": "https://yarmill.com",
      "linkedin": "https://www.linkedin.com/company/yarmill",
      "instagram": "https://www.instagram.com/yarmillapp/"
    }
  }
}
